{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Parrot",
  "version": "0.1.0",
  "identifier": "com.bluedokkaebi.parrot",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Parrot",
        "width": 500,
        "height": 700,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../models/ggml-tiny.en.bin",
      "../models/voices/*",
      "../piper/piper/piper.exe",
      "../piper/piper/*.dll"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    }
  }
}
