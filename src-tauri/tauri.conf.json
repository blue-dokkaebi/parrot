{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Parrot",
  "version": "0.1.1",
  "identifier": "com.bluedokkaebi.parrot",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Parrot",
        "width": 500,
        "height": 700,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../models/ggml-tiny.en.bin": ".",
      "../models/voices/": "voices/",
      "../piper/piper/piper.exe": ".",
      "../piper/piper/espeak-ng.dll": ".",
      "../piper/piper/onnxruntime.dll": ".",
      "../piper/piper/onnxruntime_providers_shared.dll": ".",
      "../piper/piper/piper_phonemize.dll": ".",
      "../piper/piper/espeak-ng-data/": "espeak-ng-data/",
      "../piper/piper/libtashkeel_model.ort": "."
    },
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    }
  }
}
